<form method="post" action="{{ path('tablet_delete', {'id': tablet.id}) }}" onsubmit="return confirm('Borrar la tablet?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tablet.id) }}">
    <button class="btn">Delete</button>
</form>
